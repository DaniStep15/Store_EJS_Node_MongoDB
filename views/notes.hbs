<h1>Notes</h1>

{{#if notes.length}}
{{#each notes}}
<div class="row">
  <div class="col s6 offset-s3">
    <div class="card">
      <div class="card-content">
        <span class="card-title">{{title}}</span>
      </div>
      <div class="card-action actions">
        <a href="/notes/{{id}}/edit?allow=true">Edit note</a>
      </div>
    </div>
  </div>
</div>
{{/each}}
{{else}}
<p>Empty</p>
{{/if}}